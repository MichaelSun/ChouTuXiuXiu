<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_editor_editor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/photo_editor_editor_top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/default_background" >

        <Button
            android:id="@+id/photo_editor_editor_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/default_text_color" >
        </Button>

        <Button
            android:id="@+id/photo_editor_editor_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/default_text_color" >
        </Button>

        <View
            android:id="@+id/photo_editor_editor_top_bar_splitter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" >
        </View>

        <Button
            android:id="@+id/photo_editor_editor_regret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/photo_editor_editor_top_bar_splitter"
            android:background="@null"
            android:text="上一步"
            android:textColor="@color/default_text_color" >
        </Button>

        <Button
            android:id="@+id/photo_editor_editor_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photo_editor_editor_top_bar_splitter"
            android:background="@null"
            android:text="下一步"
            android:textColor="@color/default_text_color" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo_editor_editor_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

</LinearLayout>