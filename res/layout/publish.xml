<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <com.canruoxingchen.uglypic.cache.AsyncImageView android:id="@+id/share_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"/>
        <EditText android:id="@+id/share_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"></EditText>
    </LinearLayout>
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/publish_include_origin_image"/>
        <com.canruoxingchen.uglypic.view.SlipButton
            android:id="@+id/publish_slip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"></com.canruoxingchen.uglypic.view.SlipButton>
    </RelativeLayout>
    
    <TextView android:id="@+id/publish_share_to_weibo"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="@string/publish_share_to_weibo"></TextView>
    <TextView android:id="@+id/publish_share_to_weixin"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="@string/publish_share_to_weixin"></TextView>
    <TextView android:id="@+id/publish_share_to_friends"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="@string/publish_share_to_friends"></TextView>

</LinearLayout>
